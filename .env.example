# =============================================================================
# SHARED ENVIRONMENT VARIABLES
# =============================================================================

# Node Environment
NODE_ENV=development

# =============================================================================
# DOCKER INFRASTRUCTURE CREDENTIALS
# =============================================================================

# PostgreSQL Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=<your-postgres-password>
POSTGRES_DB=notification_system
POSTGRES_PORT=5432

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=<optional-redis-password>

# RabbitMQ Message Queue
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=<your-rabbitmq-password>
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_URL=amqp://admin:<your-rabbitmq-password>@localhost:5672

# pgAdmin
PGADMIN_EMAIL=admin@admin.com
PGADMIN_PASSWORD=<your-pgadmin-password>
PGADMIN_PORT=5050

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Database Connection String
DATABASE_URL="postgresql://<postgres-user>:<postgres-password>@localhost:5432/<database-name>?schema=public"

# JWT Configuration
JWT_SECRET=<your-secret-jwt-key>
JWT_EXPIRES_IN=24h

# =============================================================================
# API GATEWAY SPECIFIC
# =============================================================================
API_GATEWAY_PORT=3000

# Service URLs (for inter-service communication)
USER_SERVICE_URL=http://localhost:3001
TEMPLATE_SERVICE_URL=http://localhost:3003
EMAIL_SERVICE_URL=http://localhost:3002
PUSH_SERVICE_URL=http://localhost:3004

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100

# =============================================================================
# MICROSERVICES PORTS
# =============================================================================
USER_SERVICE_PORT=3001
EMAIL_SERVICE_PORT=3002
TEMPLATE_SERVICE_PORT=3003
PUSH_SERVICE_PORT=3004

# =============================================================================
# MICROSERVICES PORTS
# =============================================================================
USER_SERVICE_PORT=3001
EMAIL_SERVICE_PORT=3002
TEMPLATE_SERVICE_PORT=3003
PUSH_SERVICE_PORT=3004

# =============================================================================
# EMAIL SERVICE SPECIFIC
# =============================================================================
# Email Settings
EMAIL_FROM_NAME=service-or-app-name
MAX_RETRY_ATTEMPTS=number-of-retries
RETRY_DELAY=delay-in-milliseconds

# --- Gmail ---
# IMPORTANT
# 1. Enable 2-Step Verification on your Gmail account
# 2. Generate an App Password at https://myaccount.google.com/apppasswords
# 3. Use the 16-character app password (no spaces)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=<your-gmail-address>
SMTP_PASS=<your-gmail-app-password>
EMAIL_FROM_ADDRESS=<your-email-address>


